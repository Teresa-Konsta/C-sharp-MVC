@model IQueryable<Recipe>
<!--or IEnumerable / IQueryable-->

@{
    ViewBag.Title = "All Recipes";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var r in Model)
    {
        <tr>
            <td class="text-right">@r.RecipeID</td>
            <td>@r.RecipeName</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="RecipeID" value="@r.RecipeID"/>
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-recipeID="@r.RecipeID">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Recipe</a>
</div>