@model Recipe

@{
    ViewBag.Title = "Recipe review";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h1>Add review</h1></div>
    <div class="panel-body">
        <form class="p-a-l" asp-action="ReviewRecipe" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="RecipeName">Recipe Name:</label>
                <input class="form-control" asp-for="RecipeName" />
            </div>
            <div class="form-group">
                <label asp-for="Review">Write a review:</label>
                <input class="form-control" asp-for="Review" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>