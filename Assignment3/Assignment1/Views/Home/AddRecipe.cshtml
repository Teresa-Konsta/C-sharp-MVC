@model Recipe

@{
    ViewBag.Title = "Add Recipe";
}

    <div class="panel panel-success">
        <div class="panel-heading text-center"><h1>Add new receipe:</h1></div>
        <div class="panel-body">
            <form class="p-a-l" asp-action="AddRecipe" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="RecipeName">Recipe Name: </label>
                    <input class="form-control" asp-for="RecipeName" />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description: </label>
                    <input class="form-control" asp-for="Description" />
                </div>
                <div class="form-group">
                    <label asp-for="Ingredients">Ingredients: </label>
                    <input class="form-control" asp-for="Ingredients" />
                </div>
                <div class="form-group">
                    <label asp-for="Chef">Chef: </label>
                    <input class="form-control" asp-for="Chef" />
                </div>
                <div class="form-group">
                    <label asp-for="PreparationTime">Preparation Time: </label>
                    <input class="form-control" asp-for="PreparationTime" />
                </div>
                <div>
                    <button class="btn btn-primary" type="submit">Add recipe</button> | <button class="btn btn-primary" asp-action="Index">Cancel</button>
                </div>
            </form>
            </div>
            <div>
                <p></p>
                <img src="~/images/recipe-small.png" width="70" height="80" />
            </div>
        </div>
